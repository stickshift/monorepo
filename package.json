{
    "name": "monorepo",
    "version": "0.1.0",
    "private": true,
    "workspaces": [
        "apps/*"
    ],
    "scripts": {
        "install:ts": "bun install",
        "install:py": "uv sync",
        "install:all": "bun run install:ts && bun run install:py",
        "dev:apps": "bun run --cwd apps/* dev",
        "dev": "bun run dev:apps",
        "clean:apps": "bun run --cwd apps/* clean",
        "clean:root": "rm -rf node_modules .venv",
        "clean": "bun run clean:apps && bun run clean:root"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/bun": "^1.1.16",
        "@types/react": "^19.0.4",
        "typescript": "^5.7.3"
    }
}