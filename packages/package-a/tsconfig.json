{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "sourceMap": true,
      "outDir": "dist",

      /* Type Declaration Output */
      "declaration": true,
      "declarationMap": true,
      
      /* Interop Constraints */
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*"],
}
