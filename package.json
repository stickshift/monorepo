{
    "name": "monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "start": "npm run start --workspaces --if-present",
        "dev": "concurrently \"npm run dev --workspace service-a\" \"npm run dev --workspace service-b\"",
        "clean": "npm run clean --workspaces --if-present"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.5",
        "concurrently": "^9.1.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.1",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}
